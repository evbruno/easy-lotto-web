<div class="container">

  <div class="row">

    <!-- col -->
    <div class="col">
      <h3>Lotofacil</h3>
      <p>Últimos sorteios</p>
      <table class="table table-striped table-hover">
        <thead class="thead-inverse">
          <tr>
            <th>Sorteio</th>
            <th>Data</th>
            <th>Números</th>
          </tr>
        </thead>
        <tbody>
          <% @lotofacil_draws.each do |lot| %>
          <tr>
            <td><%= lot.number %></td>
            <td><%= lot.date.strftime('%d/%m/%Y') %></td>
            <td><%= numbers_to_badges(lot.numbers).html_safe %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
    <!-- /col -->

    <!-- col -->
    <div class="col">
      <h3>Mega Sena</h3>
      <p>Últimos sorteios</p>
      <table class="table table-striped table-hover">
