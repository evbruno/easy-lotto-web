          <tr>
            <th>Sorteio</th>
            <th>Data</th>
            <th>Números</th>
          </tr>
        </thead>
        <tbody>
          <% @megasena_draws.each do |lot| %>
          <tr>
            <td><%= lot.number %></td>
            <td><%= lot.date.strftime('%d/%m/%Y') %></td>
